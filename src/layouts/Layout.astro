---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
// Supports weights 100-900
import "@fontsource-variable/noto-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="Carla Planifica tu Éxito"
      content="¿Sueñas con una vida sin preocupaciones financieras?  Te Ayudaré a convertir tus sueños en realidad. Solicita una consulta gratuita ahora."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- HTML Meta Tags -->

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://www.carlaplanificatuexito.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Carla Planifica tu Éxito" />
    <meta
      property="og:description"
      content="¿Sueñas con una vida sin preocupaciones financieras?  Te Ayudaré a convertir tus sueños en realidad. Solicita una consulta gratuita ahora."
    />
    <meta property="og:image" content="/meta-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:domain"
      content="https://www.carlaplanificatuexito.com/"
    />
    <meta
      property="twitter:url"
      content="https://www.carlaplanificatuexito.com/"
    />
    <meta name="twitter:title" content="Carla Planifica tu Éxito" />
    <meta
      name="twitter:description"
      content="¿Sueñas con una vida sin preocupaciones financieras?  Te Ayudaré a convertir tus sueños en realidad. Solicita una consulta gratuita ahora."
    />
    <meta
      name="twitter:image"
      content="https://uniformes-medicos.vercel.app/pantalla.png"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
  </head>
  <body>
    <Navbar />
    <slot />

    <Footer />

    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
    ></script>
  </body>
</html>
<style>
  @font-face {
    font-family: "NourdBold";
    src: url("/nourd_bold.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Legquinne";
    src: url("/Legquinne-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    font-family: "Noto Sans Variable", sans-serif;
    color: #23284f;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "NourdBold", sans-serif;
  }

  h1 {
    font-size: 2em; /* El tamaño de fuente de h1 será el doble del tamaño de fuente del elemento padre */
  }

  h2 {
    font-size: 1.5em; /* El tamaño de fuente de h2 será 1.5 veces el tamaño de fuente del elemento padre */
  }

  h3 {
    font-size: 1.2em;
  }

  h4 {
    font-size: 1.1em;
  }

  h5 {
    font-size: 1em;
  }

  h6 {
    font-size: 0.9em;
  }
</style>
