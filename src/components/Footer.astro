---
import Instagram from "../utils/icons/Instagram.astro";
import Whatsapp from "../utils/icons/whatsapp.astro";


---

<footer class="bg-white dark:bg-gray-900 p-20">
  <div>
    <div class="flex">
      <div class="w-1/2 flex justify-center">
        <img
          src="/imgs/carla-footer.webp"
          alt="Foto de Carla Loyo"
          class="py-12"
        />
      </div>
      <div class="w-1/2">
        <h1>Let's connect</h1><p>
          Submit the form below, and I'll contact you within 1-5 business days.
          You can also request a free 10-min consultation call if desired.
        </p><div></div>
        <div>
          <form class="bg-white shadow-md rounded px-16 pt-6 pb-8 mb-4">
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="username"
              >
                Nombre
              </label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                id="username"
                type="text"
                placeholder="Tú Nombre"
              />
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="password"
              >
                Email
              </label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                id="password"
                type="email"
                placeholder="Tú Email Aquí"
              />
              <!-- <p class="text-red-500 text-xs italic">
                  Please choose a password.
                </p> -->
            </div>
            <div class="mb-6">
              <label
                class="block text-gray-700 text-sm font-bold mb-2"
                for="password"
              >
                Mensaje
              </label>
              <textarea
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline h-28"
                id="password"
                placeholder="Tú Mensaje Aquí"></textarea>
              <!-- <p class="text-red-500 text-xs italic">
                  Please choose a password.
                </p> -->
            </div>
            <div class="flex items-center justify-between">
              <button
                class="bg-darkBlue hover:bg-middleBlue hover:text-darkBlue text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-44"
                type="button"
              >
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="flex
    justify-between"><h6>Desarrollado por frakoDev</h6>
    <div class="flex justify-evenly w-1/6">
      <Instagram />
    <Whatsapp />
  </div>
</div>
  </div>
</footer>
